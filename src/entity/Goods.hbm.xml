<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entity.Goods" table="GOODS">
        <id name="gid" type="java.lang.String" length="8">
            <generator class="assigned"/>
        </id>
		<property name="gname" type="java.lang.String" not-null="true"/>
		<property name="price" type="int" not-null="true"/>
		<property name="amount" type="int" not-null="true"/>
		
        
    </class>

</hibernate-mapping>
