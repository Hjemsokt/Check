<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entity.Buyers" table="BUYERS">
        <id name="bid" type="int">
            <generator class="native"/>
        </id>
		<property name="bname" type="java.lang.String" not-null="true"/>
		<property name="tel" type="java.lang.String" length="11" not-null="true"/>
        <property name="address" type="java.lang.String" not-null="true"/>
    </class>

</hibernate-mapping>
